---
import { Image } from 'astro:assets';
import imgEquipo1 from '../../assets/Equipo/1.webp';
---

<section class="team-hero scroll-animate">
    <div class="team-container-limited">
        <div class="team-image-wrapper-limited">
            <Image 
                src={imgEquipo1} 
                alt="Equipo Jaguar Racing de la ESIME Azcapotzalco" 
                class="team-img-fit" 
                
                widths={[350, 600, 900, 1200, 1920]}
                
                sizes="(max-width: 768px) 100vw, (max-width: 1200px) 100vw, 1200px"
                
                quality={80}
                format="webp"
                
                loading="lazy" 
                decoding="async"
                fetchpriority="auto"
            />
            
            <div class="team-overlay">
                <h2 class="section-title compact-title">EQUIPO JAGUAR</h2>
                
                <div class="social-links-large">
                    <a href="https://www.instagram.com/jaguar_racing_team/" target="_blank" aria-label="Instagram" rel="noopener noreferrer">
                        <img src="/img/page/ImgIG.webp" alt="Instagram" width="40" height="40" loading="lazy" decoding="async">
                    </a>
                    <a href="https://www.linkedin.com" target="_blank" aria-label="LinkedIn" rel="noopener noreferrer">
                        <img src="/img/page/linkedIn_.webp" alt="LinkedIn" width="40" height="40" loading="lazy" decoding="async">
                    </a>
                    <a href="https://www.facebook.com/people/Jaguar-Racing-IPN/" target="_blank" aria-label="Facebook" rel="noopener noreferrer">
                        <img src="/img/page/ImgFaceeBook.webp" alt="Facebook" width="40" height="40" loading="lazy" decoding="async">
                    </a>
                </div>
                
                <a href="/team" class="btn-underline">CONOCER INTEGRANTES</a>
            </div>
        </div>
    </div>
</section>