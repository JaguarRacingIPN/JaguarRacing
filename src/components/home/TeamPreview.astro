---
import { Image } from 'astro:assets';

import imgEquipo1 from '../../assets/Equipo/1.webp';

import instagramIcon from '../../assets/logos/ImgIG.webp';
import linkedInIcon from '../../assets/logos/linkedIn_.webp';
import facebookIcon from '../../assets/logos/ImgFaceeBook.webp';

import '../../styles/home/section-about.css';
---

<section class="team-hero scroll-animate">
    <div class="team-container-limited">
        <div class="team-image-wrapper-limited">
            <Image 
                src={imgEquipo1} 
                alt="Equipo Jaguar Racing de la ESIME Azcapotzalco" 
                class="team-img-fit" 
                
                widths={[320, 480, 640, 800, 1024, 1280]}
                sizes="(max-width: 480px) 100vw, (max-width: 768px) 100vw, (max-width: 1200px) 100vw, 1200px"
                quality={70}
                format="webp"
                
                loading="lazy" 
                decoding="async"
                fetchpriority="low"
            />
            
            <div class="team-overlay">
                <h2 class="section-title compact-title">EQUIPO JAGUAR</h2>
                
                <div class="social-links-large">
                    <a 
                        href="https://www.instagram.com/jaguar_racing_team/" 
                        target="_blank" 
                        rel="noopener noreferrer"
                        aria-label="Síguenos en Instagram"
                    >
                        <Image
                            src={instagramIcon}
                            alt="Instagram"
                            class="social-icon"
                            
                            widths={[40, 80, 120]}
                            sizes="(max-width: 768px) 40px, 80px"
                            quality={90}
                            format="webp"
                            
                            loading="lazy"
                            decoding="async"
                        />
                    </a>
                    {/*
                    <a
                        href="https://www.linkedin.com/company/jaguar-racing-ipn" 
                        target="_blank" 
                        rel="noopener noreferrer"
                        aria-label="Síguenos en LinkedIn"
                    >
                        <Image
                            src={linkedInIcon}
                            alt="LinkedIn"
                            class="social-icon"
                            
                            widths={[40, 80, 120]}
                            sizes="(max-width: 768px) 40px, 80px"
                            quality={90}
                            format="webp"
                            
                            loading="lazy"
                            decoding="async"
                        />
                    </a>
                    */}
                    <a 
                        href="https://www.facebook.com/jaguar.racing.team/" 
                        target="_blank" 
                        rel="noopener noreferrer"
                        aria-label="Síguenos en Facebook"
                    >
                        <Image
                            src={facebookIcon}
                            alt="Facebook"
                            class="social-icon"
                            
                            widths={[40, 80, 120]}
                            sizes="(max-width: 768px) 40px, 80px"
                            quality={90}
                            format="webp"
                            
                            loading="lazy"
                            decoding="async"
                        />
                    </a>
                </div>
                
                <a href="/team" class="btn-underline">CONOCER INTEGRANTES</a>
            </div>
        </div>
    </div>
</section>