---
import { Image } from "astro:assets";

import jaguarLogo from "../../assets/logos/JaguarLogo.webp";
import instagramIcon from "../../assets/logos/ImgIG.webp";
import linkedInIcon from "../../assets/logos/linkedIn_.webp";
import facebookIcon from "../../assets/logos/ImgFaceeBook.webp";
import githubIcon from "../../assets/logos/github.webp";
---

<footer class="site-footer">
    <div class="site-footer__content">
        <div class="site-footer__section">
            <div>
                <Image
                    src={jaguarLogo}
                    alt="Jaguar Racing Logo"
                    class="site-footer__logo"
                    widths={[100, 150, 200]}
                    sizes="(max-width: 480px) 100px, 150px"
                    quality={80}
                    format="webp"
                    loading="lazy"
                    decoding="async"
                />
            </div>
            <p class="site-footer__desc">
                Escudería oficial de la ESIME Azcapotzalco.
            </p>
        </div>

        <div class="site-footer__section site-footer__contact">
            <div>
                <p>Av. de las Granjas 682, Azcapotzalco, CDMX.</p>

                <div class="footer-email-wrapper">
                    <a
                        href="mailto:jaguarteam.ipn@gmail.com"
                        class="footer-email-link"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <rect width="20" height="16" x="2" y="4" rx="2"
                            ></rect>
                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                            ></path>
                        </svg>
                        <span>jaguarteam.ipn@gmail.com</span>
                    </a>
                </div>
            </div>

            <div class="social-icons">
                <a
                    href="https://www.instagram.com/jaguar_racing_team/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="social-icons__link"
                    aria-label="Síguenos en Instagram"
                >
                    <Image
                        src={instagramIcon}
                        alt="Instagram"
                        class="social-icons__img"
                        widths={[40, 80]}
                        sizes="40px"
                        quality={80}
                        format="webp"
                        loading="lazy"
                        decoding="async"
                    />
                </a>
                {
                    /*
                <a
                    href="https://www.linkedin.com/company/jaguar-racing-ipn"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="social-icons__link"
                    aria-label="Síguenos en LinkedIn"
                >
                    <Image
                        src={linkedInIcon}
                        alt="LinkedIn"
                        class="social-icons__img"
                        widths={[40, 80, 120]}
                        sizes="(max-width: 768px) 40px, 80px"
                        quality={90}
                        format="webp"
                        loading="lazy"
                        decoding="async"
                    />
                </a>
                    */
                }
                <a
                    href="https://www.facebook.com/jaguar.racing.team/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="social-icons__link"
                    aria-label="Síguenos en Facebook"
                >
                    <Image
                        src={facebookIcon}
                        alt="Facebook"
                        class="social-icons__img"
                        widths={[40, 80]}
                        sizes="40px"
                        quality={80}
                        format="webp"
                        loading="lazy"
                        decoding="async"
                    />
                </a>

                <a
                    href="https://github.com/JaguarRacingIPN"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="social-icons__link"
                    aria-label="Síguenos en GitHub"
                >
                    <Image
                        src={githubIcon}
                        alt="GitHub"
                        class="social-icons__img"
                        widths={[40, 80]}
                        sizes="40px"
                        quality={80}
                        format="webp"
                        loading="lazy"
                        decoding="async"
                    />
                </a>
            </div>
        </div>
    </div>

    <div class="site-footer__bottom">
        <div class="site-footer__bottom-content">
            <p class="copyright-text">
                Jaguar Racing Team. <span class="hidden-mobile">|</span> Hecho con
                orgullo politécnico.
            </p>

            <nav class="legal-nav">
                <a href="/privacidad" class="footer-privacy-link"
                    >Política de Privacidad</a
                >
            </nav>
        </div>
    </div>

    <script>
        import { inject } from "@vercel/analytics";
        import { injectSpeedInsights } from "@vercel/speed-insights";
        inject();
        injectSpeedInsights();
    </script>
</footer>
