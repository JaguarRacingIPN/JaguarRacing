---
import { Image } from 'astro:assets';
import '../../styles/team/module-album-strip.css';

const teamImages = await Astro.glob('../../assets/Equipo/*.{jpg,JPG,jpeg,JPEG,png,PNG,webp,WEBP}');
---

<section class="team-marquee-section scroll-animate">
    <div class="team-marquee-wrapper">
        <div class="team-marquee-track">
            {teamImages.map((img, index) => (
                <div class="marquee-card">
                    <Image 
                        src={img.default} 
                        alt={`Equipo Jaguar Racing - Momento ${index + 1}`}
                        class="marquee-img"
                        widths={[200, 300, 400, 600]}
                        sizes="(max-width: 480px) 200px, (max-width: 768px) 300px, 400px"
                        quality={80}
                        
                        format="webp"
                        loading="lazy"
                        decoding="async"
                    />
                </div>
            ))}
            {teamImages.map((img, index) => (
                <div class="marquee-card" aria-hidden="true">
                    <Image 
                        src={img.default} 
                        alt=""
                        class="marquee-img"
                        widths={[200, 300, 400, 600]}
                        sizes="(max-width: 480px) 200px, (max-width: 768px) 300px, 400px"
                        quality={80}
                        format="webp"
                        loading="lazy"
                        decoding="async"
                    />
                </div>
            ))}
        </div>
    </div>
</section>