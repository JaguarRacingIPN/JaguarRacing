---
import { Image } from 'astro:assets';
import imgPortada from '../../assets/Portadas/2.webp'; 
import '../../styles/layout/hero-internal.css';
---

<header class="hero-internal">
    <Image 
        src={imgPortada} 
        alt="Patrocinadores y Alianzas Estratégicas - Jaguar Racing"
        class="hero-internal__bg" 
        widths={[375, 750, 828, 1080, 1366, 1920, 2048]}
        sizes="(max-width: 640px) 100vw, (max-width: 1024px) 100vw, 1920px"
        quality={85}
        format="webp"
        
        loading="eager"
        fetchpriority="high"
        decoding="sync"
    />
    
    <div class="hero-internal__overlay"></div>
    
    <div class="hero-internal__content">
        <h1 class="hero-internal__title">ALIANZAS ESTRATÉGICAS</h1>
    </div>
</header>