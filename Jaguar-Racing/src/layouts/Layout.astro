---
import { ClientRouter } from 'astro:transitions';

// --- ESTILOS GLOBALES (MODULARIZADOS) ---
// 1. Base y Variables (Imprescindible: Colores, fuentes, reset)
import '../styles/variables-base.css';

// 2. UI y Tipografía (Imprescindible: H1-H3, Botones, Utilidades)
import '../styles/typography-ui.css';

// 3. Estructura Fija (Header y Footer)
import '../styles/header.css';
import '../styles/footer.css';

// 4. Portadas (Hero Index y Hero Interno)
import '../styles/hero.css';          /* Para el Index */
import '../styles/hero-internal.css'; /* Para páginas internas */

// --- ESTILOS ESPECÍFICOS / LEGACY ---
import '../styles/NoSelect.css';
import '../styles/widget_chat.css'; 

import ChatWidget from '../components/ChatWidget.astro';
import Header from '../components/Header.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/webp" href="/img/page/JaguarLogoPestania.webp" />
		
		<title>{title}</title>
		<meta name="description" content="Sitio oficial de Jaguar Racing, Escudería de la ESIME Azcapotzalco (IPN). Diseño y manufactura de prototipos para Baja SAE. Innovación, reclutamiento y patrocinios." />
		
		<meta name="keywords" content="Jaguar Racing, IPN, ESIME Azcapotzalco, Baja SAE, SAE México, Ingeniería Mecánica, Automotriz, Prototipos, Escudería" />
		<meta name="author" content="Jaguar Racing Team" />

		<meta property="og:title" content={`Jaguar Racing | ${title}`} />
		<meta property="og:description" content="Únete a la escudería oficial del IPN. Diseñamos prototipos Baja SAE. ¡Conoce nuestra tecnología y equipo!" />
		<meta property="og:image" content="public/img/page/JaguarLogoConocenos.webp" />
		<meta property="og:url" content="https://jaguar-racing.vercel.app/" />
		<meta property="og:type" content="website" />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&display=swap" rel="stylesheet">
		
		<ClientRouter />
	</head>
	<body>
		
		<Header transition:persist />

		<main>
			<slot />
		</main>

		<ChatWidget transition:persist />

	</body>

	<script>
	  window.addEventListener('load', () => {
	    // Scripts globales si los necesitas
	  });
	</script>
</html>