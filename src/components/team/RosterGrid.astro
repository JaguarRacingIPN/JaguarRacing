---
import roster from '../../data/miembros.json'; // Ajuste de ruta (subimos 2 niveles)
import '../../styles/team/carruselAlbum.css';
---

<div class="roster-section">
    {roster.map((seccion) => (
        <section class="roster-category">
            <div class="category-header">
                <span class="gold-line"></span>
                <h2 class="category-title">{seccion.categoria}</h2>
                <span class="gold-line"></span>
            </div>

            <div class="roster-grid">
                {seccion.integrantes.map((miembro) => (
                    <div class="roster-card">
                        <div class="roster-img-box">
                            {/* FOTOS DE JSON: Usamos <img> est√°ndar optimizado */}
                            <img 
                                src={miembro.foto} 
                                alt={`Foto de ${miembro.nombre}`} 
                                class="roster-img" 
                                loading="lazy" 
                                decoding="async"
                                width="300" 
                                height="300" 
                            />
                        </div>

                        <div class="roster-info">
                            <div class="roster-role">{miembro.rol}</div>
                            <h3 class="roster-name">{miembro.nombre}</h3>
                            <p class="roster-career">{miembro.carrera}</p>
                            
                            {miembro.linkedin && (
                                <a href={miembro.linkedin} target="_blank" rel="noopener noreferrer" class="roster-social-link" aria-label={`LinkedIn de ${miembro.nombre}`}>
                                    <img 
                                        src="/img/page/linkedIn_.webp" 
                                        alt="LinkedIn Icon" 
                                        class="linkedin-icon"
                                        loading="lazy"
                                        decoding="async"
                                        width="22"
                                        height="22"
                                    />
                                </a>
                            )}
                        </div>
                    </div>
                ))}
            </div>
        </section>
    ))}
</div>