---
import { Image } from 'astro:assets';
import imgTrayectoria from '../../assets/Portadas/IMG_3259.webp';
import '../../styles/layout/hero-internal.css';
---

<header class="hero-internal">
    <Image 
        src={imgTrayectoria} 
        alt="Trayectoria Jaguar Racing en Baja SAE"
        class="hero-internal__bg" 
        widths={[375, 750, 828, 1080, 1366, 1920, 2560]}
        sizes="(max-width: 640px) 100vw, (max-width: 1024px) 100vw, (max-width: 1920px) 1920px, 2560px"
        quality={85}
        format="webp"
        
        loading="eager"
        fetchpriority="high"
        decoding="sync"
    />
    
    <div class="hero-internal__overlay"></div>
    
    <div class="hero-internal__content">
        <h1 class="hero-internal__title">Nuestra Trayectoria</h1>
    </div>
</header>