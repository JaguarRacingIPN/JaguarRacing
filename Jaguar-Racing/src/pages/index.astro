---
// --- ZONA DE L√ìGICA (Server Side) ---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';

// Importamos los CSS
import '../styles/indexCuerpo.css';
import '../styles/carruselPatrocinios.css';
import '../styles/apoyanosbtn.css';
import '../styles/miniJuego.css'; 
import '../styles/NoSelect.css';

const pageTitle = "Inicio";

// 1. CARGA DE PORTADA (Glob para carpeta completa en assets)
const backgroundImages = await Astro.glob('../assets/Portada/*.{jpg,JPG,jpeg,JPEG,png,PNG,webp,WEBP}');

// 2. IMPORTACI√ìN DE IM√ÅGENES ESPEC√çFICAS (Assets JPG)
import imgBaja from '../assets/CuerpoIndex/10.jpg';
import imgTaller from '../assets/Equipo/EQUIPO EN TALLER.jpg';
import imgEquipo1 from '../assets/Equipo/1.JPG';

// 3. ARRAY DE PATROCINADORES (Con Enlaces)
const patrocinadores = [
  { img: 'altair.webp', url: 'https://altair.com' },
  { img: 'ansys.webp', url: 'https://www.ansys.com' },
  { img: 'bimsa.webp', url: 'https://www.linkedin.com/company/bombas-internacionales-mexicanas-sa-cv/?originalSubdomain=mx' }, /* <-- Pon el link real aqu√≠ */
  { img: 'copiisa.webp', url: 'https://copiisa.com.mx' },
  { img: 'mantemimiento.webp', url: 'https://mantto.mx/' },
  { img: 'polimex.webp', url: 'https://www.polimex.mx' },
  { img: 'SMI.webp', url: 'https://www.smimexico.com.mx/' },
  { img: 'solidwor.webp', url: 'https://www.solidworks.com' },
  { img: 'tmx.webp', url: 'https://hvhindustrial.com/es/brand/toolmex-tmx' },
  { img: 'toyota.webp', url: 'https://www.toyota.mx' },
  { img: 'IPN.webp', url: 'https://www.ipn.mx' }
];

const trayectoria = [
  { anio: "2019", titulo: "1er Lugar Marketing", desc: "Baja SAE M√©xico" },
  { anio: "2020", titulo: "Finalista Dise√±o", desc: "Validaci√≥n Virtual" },
  { anio: "2022", titulo: "1er Lugar General", desc: "ATV Design Challenge" },
  { anio: "2026", titulo: "Prototipo 4x4", desc: "Rumbo a Baja SAE" },
];
---

<Layout title={pageTitle}>
    <main>
        
        {/* 1. HERO SLIDER */}
        <div class="hero-background-container">
            <div class="slideshow-wrapper">
                {backgroundImages.map((img, index) => (
                    <div class={`bg-slide ${index === 0 ? 'active' : ''}`}>
                       <Image 
                            src={img.default} 
                            alt="Jaguar Racing Portada" 
                            width={1920} 
                            height={1080} 
                            class="bg-image-fit" 
                            loading={index === 0 ? "eager" : "lazy"} 
                        />
                        <div class="overlay-dark"></div>
                    </div>
                ))}
            </div>
            <div class="hero-content-fixed">
                <h1 class="hero__title">JAGUAR RACING</h1>
            </div>
        </div>

        {/* 2. ESTAD√çSTICAS */}
        <section class="stats-bar scroll-animate" id="stats-section">
            <div class="stats-grid">
                <div class="stat-item">
                    <span class="stat-number" data-target="30">0</span>
                    <span class="stat-label">Ingenieros</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number" data-target="5000">0</span>
                    <span class="stat-label">Horas Ingenier√≠a</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number" data-target="14000">0</span>
                    <span class="stat-label">Comunidad</span>
                </div>
            </div>
        </section>

        {/* 3. CONTEXTO (Qui√©nes, Qu√©, Imagen Taller) */}
        <section class="context-section scroll-animate">
            <div class="context-grid">
                <div class="context-card">
                    <h3>QUI√âNES SOMOS</h3>
                    <p>Ingenieros polit√©cnicos de la ESIME Azcapotzalco unidos por la pasi√≥n al automovilismo y el orgullo de representar al IPN.</p>
                </div>
                <div class="context-card highlight">
                    <h3>QU√â HACEMOS</h3>
                    <p>Dise√±o, manufactura y validaci√≥n de prototipos de alto rendimiento (Baja y F√≥rmula) aplicando ingenier√≠a de clase mundial.</p>
                </div>
                
                {/* Imagen del equipo en taller */}
                <div class="context-image-wrapper">
                    <Image 
                        src={imgTaller} 
                        alt="Equipo trabajando en taller" 
                        class="context-img" 
                        width={800}
                        loading="lazy"
                    />
                </div>
            </div>
        </section>

        {/* 4. ¬øQU√â ES BAJA SAE? */}
        <section class="what-is-baja scroll-animate">
            <div class="what-is-container compact-layout">
                
                {/* CAMBIO: La Imagen va PRIMERO en el c√≥digo */}
                <div class="what-is-image">
                     <Image 
                        src={imgBaja} 
                        alt="Baja SAE Competencia" 
                        width={800}
                        loading="lazy"
                     />
                </div>

                {/* El Texto va DESPU√âS */}
                <div class="what-is-text">
                    <h2 class="section-title-left compact-title">LA COMPETENCIA <span class="text-gold">BAJA SAE</span></h2>
                    <div class="baja-description">
                        <p>
                            Baja SAE desaf√≠a a los estudiantes de ingenier√≠a a dise√±ar y construir un veh√≠culo todoterreno 
                            monoplaza, robusto y apto para todo tipo de clima. El objetivo es crear un prototipo capaz de 
                            sobrevivir al severo castigo de terrenos accidentados, lodo y obst√°culos extremos.
                        </p>
                    </div>

                    <div class="baja-details compact-details">
                        <div class="detail-box">
                            <h4>PRUEBAS DIN√ÅMICAS</h4>
                            <ul>
                                <li>Endurance (Resistencia 4 horas)</li>
                                <li>Arrastre y Tracci√≥n (Sled Pull)</li>
                                <li>Maniobrabilidad y Suspensi√≥n</li>
                            </ul>
                        </div>
                        <div class="detail-box">
                            <h4>PRUEBAS EST√ÅTICAS</h4>
                            <ul>
                                <li>Dise√±o de Ingenier√≠a</li>
                                <li>Costos y Manufactura</li>
                                <li>Plan de Negocios (Ventas)</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </section>

        {/* 5 & 6. BLOQUE T√âCNICO MINIMALISTA (Retos + Trayectoria) */}
        {/* Dise√±o unificado tipo Dashboard / Telemetr√≠a */}
        <div class="tech-dashboard scroll-animate">
            
            <div class="dashboard-container">
                <h3 class="dashboard-label">TELEMETR√çA 2026</h3>
                
                {/* Strip 1: M√©xico */}
                <div class="data-strip">
                    <div class="strip-info">
                        <span class="flag">üá≤üáΩ</span>
                        <span class="race-name">BAJA SAE M√âXICO</span>
                    </div>
                    <div class="strip-target">
                        <span class="target-label">OBJETIVO:</span>
                        <span class="target-value">TOP 3 OVERALL</span>
                    </div>
                    <div class="strip-timer">
                        <span id="timer-mexico" class="mono-timer">00d 00h 00m 00s</span>
                    </div>
                </div>

                {/* Strip 2: USA */}
                <div class="data-strip">
                    <div class="strip-info">
                        <span class="flag">üá∫üá∏</span>
                        <span class="race-name">BAJA SAE INT.</span>
                    </div>
                    <div class="strip-target">
                        <span class="target-label">OBJETIVO:</span>
                        <span class="target-value">TOP 10 OVERALL</span>
                    </div>
                    <div class="strip-timer">
                        <span id="timer-usa" class="mono-timer">00d 00h 00m 00s</span>
                    </div>
                </div>

                {/* Strip 3: Historial (Miniatura) */}
                <div class="history-strip">
                    <span class="hist-label">HISTORIAL:</span>
                    <div class="hist-ticker">
                        {trayectoria.map((hito, index) => (
                            <span class="hist-item">
                                <span class="h-year">{hito.anio}</span> {hito.titulo}
                                {index < trayectoria.length - 1 && <span class="separator">/</span>}
                            </span>
                        ))}
                    </div>
                </div>

            </div>
        </div>

        {/* 7. RECLUTAMIENTO */}
        <section class="join-cta scroll-animate">
            <div class="cta-media-wrapper">
                <video class="cta-video-bg" autoplay loop muted playsinline preload="auto" poster="/img/page/Registro.webp">
                    <source src="/videos/VideoConv.mp4" type="video/mp4">
                </video>
                <div class="cta-overlay"></div>
            </div>
            <div class="join-cta__text">
                <h2>√öNETE A LA <span class="text-gold">ESCUDER√çA</span></h2>
                {/* Estilo de bot√≥n actualizado */}
                <a href="/join" class="btn-underline">APLICAR AHORA</a>
            </div>
        </section>

        {/* 8. PATROCINADORES */}
        <section class="sponsors-section scroll-animate">
            <h2 class="section-title compact-title">ALIADOS</h2>
            <p class="sponsors-desc">
                Agradecemos profundamente a nuestros socios estrat√©gicos. Su apoyo en tecnolog√≠a, 
                manufactura y recursos hace posible que la ingenier√≠a mexicana compita al m√°s alto nivel mundial.
            </p>
            <div class="sponsors-marquee">
                
                {/* Carrusel 1 */}
                {patrocinadores.map((pat) => (
                    /* CAMBIO: Usamos <a> en vez de <div> y leemos pat.img y pat.url */
                    <a href={pat.url} target="_blank" rel="noopener noreferrer" class="sponsor-card">
                        <img src={`/img/IMGpatrocinadores/${pat.img}`} alt="Patrocinador" width="200" height="100" loading="lazy" />
                    </a>
                ))}

                 {/* Carrusel Duplicado (Para efecto infinito) */}
                 {patrocinadores.map((pat) => (
                    <a href={pat.url} target="_blank" rel="noopener noreferrer" class="sponsor-card">
                        <img src={`/img/IMGpatrocinadores/${pat.img}`} alt="Patrocinador" width="200" height="100" loading="lazy" />
                    </a>
                ))}

            </div>
            <div class="center-content">
                <a href="/sponsors" class="boton-legendario">SER PATROCINADOR</a>
            </div>
        </section>

        {/* 9. EQUIPO (Foto JPG Assets) */}
        <section class="team-hero scroll-animate">
            <div class="team-container-limited">
                <div class="team-image-wrapper-limited">
                    <Image 
                        src={imgEquipo1} 
                        alt="Equipo Jaguar Racing" 
                        class="team-img-fit" 
                        loading="lazy" 
                        width={1200}
                    />
                    <div class="team-overlay">
                        <h2>EQUIPO JAGUAR</h2>
                        <div class="social-links-large">
                            <a href="https://www.facebook.com/people/Jaguar-Racing-IPN/" target="_blank"><img src="/img/page/ImgFaceeBook.webp" alt="FB"></a>
                            <a href="https://www.instagram.com/jaguar_racing_team/" target="_blank"><img src="/img/page/ImgIG.webp" alt="IG"></a>
                            <a href="https://www.linkedin.com" target="_blank"><img src="/img/page/linkedIn_.webp" alt="IN"></a>
                        </div>
                        <a href="/team" class="btn-underline">CONOCER INTEGRANTES</a>
                    </div>
                </div>
            </div>
        </section>

        {/* 10. MINIJUEGO */}
        <section class="reaction-game-section scroll-animate">
            <div class="reaction-game-clean">
                <h2 class="reaction-title">REFLEJOS DE PILOTO</h2>
                
                {/* NUEVO: Visualizaci√≥n del R√©cord Personal */}
                <div class="personal-best">R√âCORD: <span id="best-time-display">--</span></div>

                <div class="lights-row">
                    <div class="light" id="l1"></div>
                    <div class="light" id="l2"></div>
                    <div class="light" id="l3"></div>
                    <div class="light" id="l4"></div>
                    <div class="light" id="l5"></div>
                </div>
                
                <div class="game-controls">
                    <div id="reaction-result" class="reaction-result">0.000 ms</div>
                    
                    {/* NUEVO: Contenedor para el Rango (Jaguar Legend, etc) */}
                    <div id="player-rank" class="reaction-rank"></div>

                    <button id="reaction-btn" class="btn-race">INICIAR TEST</button>
                </div>
            </div>
        </section>

    </main>

    <Footer />
    
    <script is:inline defer src="/js/portada.js"></script>
    <script is:inline defer src="/js/contadores.js"></script>
    <script is:inline defer src="/js/miniJuego.js"></script>
    <script is:inline defer src="/js/scroll.js"></script>
</Layout>